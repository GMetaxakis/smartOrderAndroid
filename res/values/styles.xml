<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Black"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="myTextView" parent="android:Theme.Light">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myEditText" parent="android:Theme.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myButton" parent="android:Theme.Light">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myTextViewSmall" parent="myTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>

</resources>